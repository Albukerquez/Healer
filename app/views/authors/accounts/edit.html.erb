<div class="row justify-content-center">
  <!-- Basic info section -->
  <%= form_tag authors_info_path, method: :put do %>
    <%= fields_for :author do |f| %>
      <div class="d-flex flex-nowrap mr-auto">
        <div class="card">
          <div class="card-block">
            <h6 class="card-title text-center">Информация</h6>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= gravatar_for current_author %>
            </li>
            <li class="list-group-item">
              <%= f.label 'Никнейм' %>
              <%= f.text_field :name, value: current_author.name, class: 'form-control' %>
            </li>
            <li class="list-group-item">
              <%= f.label 'Почта' %>
              <%= f.text_field :email, value: current_author.email, class: 'form-control' %>
            </li>
            <li class="list-group-item">
              <%= f.label 'Биография' %>
              <%= f.text_area :bio, value: current_author.bio, class: 'form-control' %>
            </li>
            <li class="list-group-item">
              <%= f.submit 'Обновить', class: 'btn btn-primary' %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
    <!-- Change password section -->
  <%= form_tag authors_change_password_path, method: :put do %>
    <%= fields_for :author do |f| %>
      <div class="d-flex flex-nowrap ml-auto">
        <div class="card">
          <div class="card-block">
            <h6 class="card-title text-center">Изменить пароль</h6>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= f.label 'Текущий пароль' %>
              <%= f.password_field :current_password, class: 'form-control' %>
            </li>
            <li class="list-group-item">
              <%= f.label 'Новый пароль' %>
              <%= f.password_field :new_password, class: 'form-control' %>
            </li>
            <li class="list-group-item">
              <%= f.label 'Подтверждение нового пароля' %>
              <%= f.password_field :new_password_confirmation, class: 'form-control' %>
            </li>
             <li class="list-group-item">
              <%= f.submit 'Изменить пароль', class: 'btn btn-warning' %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
