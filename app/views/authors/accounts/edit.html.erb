<div class="row">
  <!-- Basic info section -->
  <%= form_tag authors_info_path, method: :put do %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-block">
          <div class="card-title">
            Basic info
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: 'form-control' %>
          </li>
          <li class="list-group-item">
            <%= label_tag :email %>
            <%= email_field_tag :email, nil, class: 'form-control' %>
          </li>
          <li class="list-group-item">
            <%= label_tag :bio %>
            <%= text_area_tag :bio, nil, class: 'form-control' %>
          </li>
          <li class="list-group-item">
            <%= submit_tag "Update info", class: 'btn btn-primary' %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
    <!-- Change password section -->
  <%= form_tag authors_password_path do %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-block">
          <div class="card-title">
            Change password
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= label_tag :current_password %>
            <%= password_field_tag :current_password, nil, class: 'form-control' %>
          </li>
          <li class="list-group-item">
            <%= label_tag :new_password %>
            <%= password_field_tag :new_password, nil, class: 'form-control' %>
          </li>
          <li class="list-group-item">
            <%= label_tag :new_password_confirmation %>
            <%= password_field_tag :new_password_confirmation, nil, class: 'form-control' %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
