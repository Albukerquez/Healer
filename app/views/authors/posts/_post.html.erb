<tr>
  <td><%= link_to post.title, authors_post_path(post) %></td>
  <td></td>
  <% if post.published? %>
  <td><%= link_to 'Отменить публикацию', unpublish_authors_post_path(post), method: :put, class: 'btn btn-sm
                                                            btn-primary' %></td>
  <% else %>
  <td><%= link_to 'Опубликовать', publish_authors_post_path(post), method: :put, class: 'btn btn-sm
                                                          btn-success' %></td>
  <% end %>
  <td><%= link_to 'Редактировать', edit_authors_post_path(post), class: 'btn btn-sm
                                                            btn-warning' %></td>
  <td><%= link_to 'Удалить', authors_post_path(post), method: :delete,
    data: { confirm: 'Вы уверены?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>
