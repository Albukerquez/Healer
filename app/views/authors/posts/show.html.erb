<% provide(:page_title, @post.title) %>
<% provide(:author, 'active') %>

<div>
  <%= link_to 'Редактировать', edit_authors_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Удалить', authors_post_path(@post), method: :delete,
                data: { confirm: 'Вы уверены?' }, class: 'btn btn-sm btn-danger' %>
</div>

<div class="row">
  <div class="col-md-1 col-lg-2"></div>
  <div class="col-md-10 col-lg-8 text-xs-center">
    <h1><%= @post.title %></h1>
    <%= @post.body.html_safe %>
  </div>
</div>
