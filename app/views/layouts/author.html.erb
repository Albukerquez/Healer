<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'application/favicon' %>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
<% if @post %>
  <div class="article">
    <header class="article-header header-vertical-position-mid">
      <div class="container">
        <div class="col-md-1 hidden-sm-down"></div>
        <div class="article-header-elements col-md-11 col-sm-12 col-12">
          <!-- <div class="mobile-article-header-img hidden-sm-up">
          </div> -->
          <h2 class="article-title">
              <span class="article-highlight">
                <%= @post.title %>
              </span>
              <small class="article-subtitle">
                <span class="article-highlight">
                  <%= @post.description %>
                </span>
              </small>
              <p class="article-meta">
                <span class="article-highlight"> <i class="fa fa-clock-o"></i> <%= @post.display_day_published %> â€¢
                    <%= @post.display_updated_at %></span>
              </p>
          </div>
        </div>
          <div class="bg-angled bg-angled-bottom"></div>
        <% end %>
      </header>
    </div>
    <div class="container <%= controller_name %> <%= action_name %>">
        <% if flash.any? %>
          <% flash.keys.each do |key| %>
            <div class="alert alert-<%= key.to_s %> alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= flash[key] %><strong>
            </div>
          <% end %>
        <% end %>
      <%= yield %>
    </div>

  <%= render 'layouts/footer' %>
  </body>
</html>
